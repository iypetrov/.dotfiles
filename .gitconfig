[core]
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore
	pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = true
    side-by-side = true
    line-numbers = true

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool "vimdiff"]
    trustExitCode = true

[includeIf "gitdir:/root/projects/work/"]
	path = /root/.gitconfig-work

[includeIf "gitdir:/root/projects/common/"]
	path = /root/.gitconfig-personal

[includeIf "gitdir:/root/projects/personal/"]
	path = /root/.gitconfig-personal

[includeIf "gitdir:/root/projects/ip812/"]
	path = /root/.gitconfig-personal

[includeIf "gitdir:/root/projects/avalon/"]
	path = /root/.gitconfig-personal

[credential]
	helper = store
