[core]
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore
	pager = delta

[credential]
	helper = cache --timeout=3600

[interactive]
	diffFilter = delta --features=interactive

[delta]
	navigate = true    
	dark = false      
	side-by-side = true  
	line-numbers = true   

[merge]
	conflictstyle = diff3

[includeIf "gitdir:~/Documents/projects/work/"]
	path = ~/.gitconfig-work

[includeIf "gitdir:~/Documents/projects/personal/"]
	path = ~/.gitconfig-personal

[includeIf "gitdir:~/Documents/projects/common/"]
	path = ~/.gitconfig-personal
