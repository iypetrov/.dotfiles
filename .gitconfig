[core]
	autocrlf = input
	editor = vim
	excludesfile = ~/.gitignore
	pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = true
    side-by-side = true
    line-numbers = true

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool "vimdiff"]
    trustExitCode = true

[includeIf "gitdir:/home/ipetrov/projects/work/"]
	path = ~/.gitconfig-work

[includeIf "gitdir:/home/ipetrov/projects/personal/"]
	path = ~/.gitconfig-personal

[includeIf "gitdir:/home/ipetrov/projects/common/"]
	path = ~/.gitconfig-personal

[credential]
	helper = store
